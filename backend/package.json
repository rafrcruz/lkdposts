{
    "name": "backend",
    "version": "1.0.0",
    "description": "Express API for lkdposts",
    "main": "src/server.js",
    "type": "commonjs",
    "engines": {
        "node": ">=18.20.0"
    },
    "scripts": {
        "start": "node src/server.js",
        "dev": "cross-env NODE_ENV=development nodemon --watch src src/server.js",
        "lint": "eslint \"src/**/*.js\"",
        "test": "cross-env NODE_ENV=test jest --runInBand",
        "test:watch": "cross-env NODE_ENV=test jest --watch",
        "build": "npm run db:migrate:deploy:vercel",
        "docs:generate": "node scripts/generate-openapi.js",
        "task": "node scripts/run-task.js",
        "db:migrate:dev": "prisma migrate dev",
        "db:migrate:deploy": "prisma migrate deploy",
        "db:generate": "prisma generate",
        "db:seed": "prisma db seed",
        "lint:ci": "eslint \"src/**/*.{ts,tsx,js,jsx}\" -f json -o eslint-report.json",
        "test:ci": "jest --coverage --coverageReporters=lcov",
        "postinstall": "prisma generate",
        "db:migrate:deploy:vercel": "node scripts/db-migrate-deploy-vercel.js",
        "copylkd": "robocopy \"C:\\projects\\lkdposts\" \"C:\\projects\\lkd\" /E /XD node_modules || exit 0"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^6.16.2",
        "@sentry/node": "^7.118.0",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^4.21.2",
        "express-rate-limit": "^8.1.0",
        "fast-xml-parser": "^4.5.1",
        "google-auth-library": "^9.15.1",
        "he": "^1.2.0",
        "helmet": "^8.1.0",
        "hpp": "^0.2.3",
        "morgan": "^1.10.1",
        "node-html-parser": "^6.1.13",
        "pg": "^8.16.3",
        "prisma": "^6.16.2",
        "prom-client": "^15.1.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "xss-clean": "^0.1.4",
        "zod": "^4.1.9"
    },
    "devDependencies": {
        "cross-env": "^10.0.0",
        "eslint": "^8.57.1",
        "jest": "^30.1.3",
        "nodemon": "^3.1.10",
        "supertest": "^7.1.4"
    }
}
